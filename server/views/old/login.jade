
extends layout

block content
  div.flex-content-container
    div.flex-content-left
    div.flex-content-center
      div.form-container
        if message != ''
          p.error.align-center= message
        form.login-form(action='/login' method='post')
          table.form-table
            colgroup
              col(style='width: 30%')
              col(style='width: 70%')
            tr
              td
                label Username
              td
                input(type='text' name='username')
            tr
              td
                label Password
              td
                input(type='password' name='password')
            tr
              td
              td
                input(type='checkbox' name='remember_me')
                label Remember me
            tr
              td.primary-container(colspan=2)
                input.primary.login(type='submit' value='Log In')
      div.signup-message
        p.align-center Don't have a username and password?
          a(href='/signup') Sign Up Now
    div.flex-content-right
